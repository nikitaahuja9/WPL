<%- include ('partials/header') %>

<div class="container">
<h1> Drink Details </h1>

<p><img src="/images/<%= drink.image %>" /></p>
<p>Title: <%= drink.type %></p>
<p>Category: <%= drink.category %></p>
<p>Description: <%= drink.description %></p>



<button type="button" class="btn btn-block btn-outline-primary" onClick="cartLS.add({id: <%= drink._id %>, name: <%= drink.type %>, price: 130})">Add to Cart</button>

<br/>

<form action="/drinks/<%= drink._id %>/edit" method="GET">
    <button type="submit" class="btn btn-warning">Edit drink</button>
</form>

<br/>

<form action="/drinks/<%= drink._id %>?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-danger">Delete drink</button>
</form>


<p>
<a href="/drinks">Back to List</a>
</p>

</div>
<%- include ('partials/footer') %>

