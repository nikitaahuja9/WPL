  <div class="container">
    <h1>Register Page</h1>
    <p class="lead">Enter email and password</p><br>
    <form role="form" action="/register" method="post" style="max-width: 300px;">
      <div class="form-group">
        <input type="text" name="username" placeholder="Enter Email" required pattern = "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" class="form-control" title="Must be of the format: xxx@xxx.com">
      </div>
      <div class="form-group">
        <input type="password" name="password" placeholder="Password" required pattern = "(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" class="form-control" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
      <a href="/"><button type="button" class="btn btn-primary">Cancel</button></a>
    </form>
  </div>