<%- include ('partials/header') %>
<div class="container">
<h1> Update drink</h1>

<form action="/drinks/<%=result._id %>/save_edit" method="POST" >


<div class="form-group">
	<input type="text" name="type" class="form-control" placeholder="Title" value="<%=result.type %>">
</div>
 <div class="form-group">
	<input type="text" name="category" class="form-control" placeholder="Genre" value="<%=result.category %>">
</div>
<div class="form-group">
	<input type="text" name="image" class="form-control" placeholder="Image Name" value="<%=result.image %>">
</div>
<div class="form-group">
	<input type="text" name="standard_calories" class="form-control" placeholder="Calories" value="<%=result.standard_calories %>">
</div>
<div class="form-group">
	<input type="text" name="ingredients" class="form-control" placeholder="Ingredients" value="<%=result.ingredients %>">
</div>
<div class="form-group">
	<input name="description" class="form-control" placeholder="Description" value="<%=result.description %>"></input>
</div>
<div class="form-group">
	<input type="text" name="small" class="form-control" pattern = "true|false" title="Must be true/false"
	placeholder="Size Small" value="<%=result.small %>">
</div>
<div class="form-group">
	<input type="text" name="medium" class="form-control" pattern = "true|false" title="Must be true/false"
	placeholder="Size Medium" value="<%=result.medium %>">
</div>
<div class="form-group">
	<input type="text" name="large" class="form-control" pattern = "true|false" title="Must be true/false"
	placeholder="Size Large" value="<%=result.large %>">
</div>
<div class="form-group">
	<button type="submit" class="btn btn-info" >Save</button>
</div>

</form>

<a href="/drinks">Cancel</a>

</div>

<%- include ('partials/footer') %>